<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <PackageId>Worker-Blueprint</PackageId>
    <Version>2.0.0</Version>
    <Authors>Carolina</Authors>
      <RepositoryUrl>https://github.com/CarolFantini/Worker_Blueprint</RepositoryUrl>
    <PackageType>Template</PackageType>
    <TargetFramework>net8.0</TargetFramework>
    <Description>Template de Worker</Description>
    <PackageOutputPath>./nupkgs</PackageOutputPath>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <!-- Impede que o projeto tente compilar arquivos de cÃ³digo -->
    <EnableDefaultItems>false</EnableDefaultItems>
  </PropertyGroup>
  <ItemGroup>
    <Content Include="**\*" Pack="true" PackagePath="content" Exclude="**\bin\**;**\obj\**" />
    <!-- Inclui README e LICENSE na raiz -->
    <None Include="README.md" Pack="true" PackagePath="" />
    <None Include="LICENSE" Pack="true" PackagePath="" />
    <!-- Inclui o .gitignore explicitamente -->
    <None Include=".gitignore" Pack="true" PackagePath="" />
  </ItemGroup>
</Project>